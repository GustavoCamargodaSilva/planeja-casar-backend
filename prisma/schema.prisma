generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  phone     String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events       Event[]
  eventMembers EventMember[]
}

model Event {
  id              String   @id @default(uuid())
  eventType       String   @default("Casamento")
  date            DateTime
  venue           String?
  status          String   @default("Em andamento")
  overallProgress Int      @default(0)
  budget          Decimal? @db.Decimal(10, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  ownerId         String
  inviteCode      String   @unique @default(uuid())

  owner        User          @relation(fields: [ownerId], references: [id])
  members      EventMember[]
  guests       Guest[]
  checklist    ChecklistTask[]
  timeline     TimelineTask[]
  budgets      Budget[]
  vendors      Vendor[]
  ideas        Idea[]
}

model EventMember {
  id        String   @id @default(uuid())
  eventId   String
  userId    String
  role      String   @default("member") // owner, member
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
}

model Guest {
  id            String   @id @default(uuid())
  eventId       String
  name          String
  email         String?
  phone         String?
  type          String   @default("adult") // adult, child
  side          String   @default("friends") // groom, bride, groom-family, bride-family, friends
  status        String   @default("pending") // pending, confirmed, declined
  tableNumber   Int?
  dietaryNotes  String?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model ChecklistTask {
  id          String   @id @default(uuid())
  eventId     String
  title       String
  description String?
  category    String   // Cerimonia, Recepcao, Documentacao, etc.
  priority    String   @default("Media") // Alta, Media, Baixa
  status      String   @default("pending") // pending, completed
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model TimelineTask {
  id          String   @id @default(uuid())
  eventId     String
  title       String
  description String?
  date        DateTime
  time        String?
  status      String   @default("pending") // pending, in-progress, completed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Budget {
  id          String   @id @default(uuid())
  eventId     String
  vendorName  String
  category    String   // Fotografia, DJ, Local, Buffet, Decoracao, Convites, Flores
  description String?
  value       Decimal  @db.Decimal(10, 2)
  status      String   @default("pending") // pending, approved, rejected
  validUntil  DateTime?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Vendor {
  id          String   @id @default(uuid())
  eventId     String
  name        String
  category    String   // Fotografia, DJ, Local, Buffet, Decoracao, Convites, Flores
  contact     String?
  phone       String?
  email       String?
  value       Decimal? @db.Decimal(10, 2)
  status      String   @default("pending") // paid, pending, overdue
  notes       String?
  rating      Int?     // 1-5
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Idea {
  id          String   @id @default(uuid())
  eventId     String
  title       String
  description String?
  category    String   // Decoracao, Vestuario, Convites, Buffet, Flores, Local, Fotografia, DJ
  imageUrl    String?
  sourceUrl   String?
  tags        String[] // Array de tags
  isFavorite  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}
